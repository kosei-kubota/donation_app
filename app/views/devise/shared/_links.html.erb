<div class="user">
  <% if controller_name != 'sessions' %>
    <%= link_to "ログインページ", new_session_path(resource_name), class: 'user-btn' %>
    <br/>
  <% end %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: 'user-btn' %>
    <br/>
  <% end %>
</div>