<div class="card">
<%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
  <div class="Cardpage">
    <h1>クレジットカード登録</h1>
  </div><br>
  <div class='form-wrap'>
    <p , class="card-list">【カード番号】<span class="indispensable">必須</span></p>
    <%= f.text_field :number, class:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class='form-wrap'>
  <br>
    <p , class="card-list">【ＣＶＣ】<span class="indispensable">必須</span></p>
    <%= f.text_field :cvc, class:"cvc", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>
  <div class='form-wrap'>
  <br>
    <p , class="card-list">【有効期限】<span class="indispensable">必須</span></p>
    <div class='input-expiration-date-wrap'>
      <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month" %>
      <p>月</p>
      <%= f.select :exp_year, 22..30, {include_blank: "---"}, class: "exp_year" %>
      <p>年</p>
    </div>
  </div><br>
  <br>
  <%= f.submit "登録する", class:"devise-btn" %>
<% end %>
</div>